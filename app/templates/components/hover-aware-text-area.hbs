{{#unless isEditable}}
  <div class='editable-area'>{{model}}</div>
{{else}}
  {{#if isEditing}}
      {{update-aware-text-area class='wide editable-area' valueBinding="model" bubbles=true focused=true placeholder=placeholderText }}
  {{else}}
    <div class="input-group">
        <div class='editable-area outlined'>{{model}}</div>
        <span class="input-group-addon"><i class="fa fa-pencil fa-fw"></i></span>
     </div>
  {{/if}}
{{/unless}}
