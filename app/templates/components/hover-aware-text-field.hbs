{{#unless isEditable}}
  <div class='editable-field'>{{#if model.length}}
                                {{model}}
                              {{else}}
                                Click to edit
                              {{/if}}</div>
{{else}}
  {{#if isEditing}}
      {{update-aware-text-field class='wide editable-field' valueBinding="model" bubbles=true focused=true placeholder=placeholderText}}
  {{else}}
    <div class="input-group">
        <div class='editable-field outlined'>{{#if model.length}}
            {{model}}
        {{else}}
            Click to edit
        {{/if}}</div>
        <span class="input-group-addon"><i class="fa fa-pencil fa-fw"></i></span>
     </div>
  {{/if}}
{{/unless}}
