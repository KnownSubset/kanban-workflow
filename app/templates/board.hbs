{{hover-aware-text-field model=model.name}}

{{#bs-button id='add_column' type="btn btn-small" clicked="addColumn" }}<i class="fa fa-copy"></i>Create Column{{/bs-button}}
{{#bs-button id='add_card' type="btn btn-small" clicked="addCard" }}<i class="fa fa-copy"></i>Create Card{{/bs-button}}

<div class="container-fluid">
  <div class='row'>
    {{#each model.columns itemController='column'}}
      {{view 'column' class='col-md-3'}}
    {{/each}}
  </div>
</div>

