{{hover-aware-text-field model=model.name}}

{{#bs-button type="primary" clicked="addColumn" icon='fa fa-copy' }}Create Column{{/bs-button}}

<div class="container-fluid">
  <div class='row'>
    {{#each model.columns itemController='column'}}
      {{view 'column' class='col-md-3 col-xs-3 col-lg-3'}}
    {{/each}}
  </div>
</div>
