{{#bs-button id='add_card' type="btn btn-small" clicked="addCard" class="button"}}<i class="fa fa-copy"></i>Create Card{{/bs-button}}
<button type="button" class="btn btn-default" {{action showCardDetails}}><i class="icon-signin"></i> Details</button>
<div class="container-fluid">
  <div class='row'>
    {{#each model.columns itemController='column'}}
      {{view 'column' class='col-md-3'}}
    {{/each}}
  </div>
</div>

